@model webevalint.Schema.Usuario

@{
    ViewData["Title"] = "Detalles del Usuario";
}

<h1 class="my-4">Detalles del Usuario</h1>

<div class="card">
    <div class="card-header">
        <h4>Información del Usuario</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">
                Usuario
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Usuario1)
            </dd>
            <dt class="col-sm-3">
                Correo Electrónico
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-3">
                Credenciales
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Password)
            </dd>
            <dt class="col-sm-3">
                Estado
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Estado)
            </dd>
            <dt class="col-sm-3">
                Empleado
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Empleado.Nombre)
            </dd>
            <dt class="col-sm-3">
                Rol
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Rol.Nombre)
            </dd>
        </dl>
    </div>
    <div class="card-footer text-end">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.UsuarioId">Editar</a>
        <a class="btn btn-secondary" asp-action="Index">Volver al listado</a>
    </div>
</div>